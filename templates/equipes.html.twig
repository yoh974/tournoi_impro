{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {% for equipe in equipes %}
                <div class="col-md-3">
                    <div class="card" style="height: 500px;margin-top: 30px;">
                        <div class="image-wrapper d-flex align-items-center" style="max-height:300px;height: 300px;max-width: 100%">
                            <img class="card-img-top" src="{{equipe.getImage()}}" alt="Card image" >
                        </div>

                        <div class="card-body">
                            <h4 class="card-title">{{equipe.getNomEquipe()}}</h4>
                            <p class="card-text">Image joueur ici</p>
                            <a href="{{path('equipe_detail', {"id":equipe.getId()})}}" class="btn btn-primary">Détail équipe</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}

{% block title %}

{% endblock %}

