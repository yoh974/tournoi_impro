{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            {% for equipe in equipes %}
                <div class="col-md-3">
                    <div class="card" style="height: 530px;margin-top: 30px;">
                        <div class="image-wrapper d-flex align-items-center"
                             style="max-height:300px;height: 300px;max-width: 100%">
                            <img class="card-img-top" src="{{ vich_uploader_asset(equipe, 'imageFile') }}"
                                 alt="Card image">
                        </div>

                        <div class="card-body d-flex align-items-center flex-column justify-content-center">
                            <h4 class="card-title">{{ equipe.getNomEquipe() }}</h4>

                            <div class="image-joueur-equipe">
                                <div class="row d-flex justify-content-center align-items-center">
                                    {% for joueur in equipe.getPersonnes() %}
                                        <div class="col-md-3 mb-4">
                                            <img src="{{ vich_uploader_asset(joueur,'imageFile') }}" style="width: 100%;">
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <a href="{{ path('fiche_equipe', {"id":equipe.getId()}) }}" class="btn btn-primary">Détail
                                équipe</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}

{% block title %}

{% endblock %}

